<?xml version="1.0" encoding="utf-8"?>
<manifest package="org.mamasdelrio.android"
          xmlns:android="http://schemas.android.com/apk/res/android">

  <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
  <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>

  <application
      android:allowBackup="true"
      android:icon="@mipmap/mamas"
      android:label="@string/app_name"
      android:supportsRtl="true"
      android:theme="@style/AppTheme">
    <activity android:name=".MainActivity"/>
    <activity
        android:name=".FormPickerActivity"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>

        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>
    <activity
        android:name=".DoPregnancyActivity"
        android:windowSoftInputMode="adjustResize">
    </activity>
    <activity android:name=".DoAlarmActivity">
    </activity>
    <activity android:name=".DoBirthActivity">
    </activity>
    <activity android:name=".DoRiskActivity">
    </activity>
    <activity android:name=".DoOutcomeActivity">
    </activity>
    <activity android:name=".LocationFetcherActivity">
    </activity>
  </application>

</manifest>
