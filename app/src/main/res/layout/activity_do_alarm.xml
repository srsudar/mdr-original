<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="org.mamasdelrio.android.DoAlarmActivity">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

    <org.mamasdelrio.android.widget.DniOrNameView
        android:id="@+id/alarm_dniorname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <org.mamasdelrio.android.widget.SelectCommunityView
        style="@style/spacers"
        android:id="@+id/alarm_community"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        style="@style/spacers"
        android:id="@+id/alarm_label"
        android:focusable="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/enter_alarm"/>

    <org.mamasdelrio.android.widget.SelectOneView
        android:id="@+id/alarm_alarm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <org.mamasdelrio.android.widget.LocationView
        style="@style/spacers"
        android:id="@+id/alarm_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        style="@style/spacers"
        android:id="@+id/alarm_send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/send_to_whatsapp_group"/>


  </LinearLayout>

</ScrollView>
